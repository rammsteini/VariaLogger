@page "/counter"

@inject StateContainer StateContainer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>



<button class="btn btn-primary" @onclick="StartBackgroundWorker">StartBackgroundWorker</button>
<button class="btn btn-primary" @onclick="StopBackgroundWorker">StopBackgroundWorker</button>
<p role="status">cnt: @_cnt</p>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
